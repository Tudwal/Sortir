{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}
{% endblock %}

{% block body %}

	<div class="container-fluid px-4 mt-4">
		<table id="datatablesSimple">
			<thead>
				<tr>
					<th>Event</th>
					<th>Date</th>
					<th>End of register</th>
					<th>Participant/number of place</th>
					<th>State</th>
					<th>Register</th>
					<th>Organizer</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				{% for event in events %}
					<tr>
						<td>{{event.name}}</td>
						<td>{{event.startDateTime | date('d-m-Y H:i:s') }}</td>
						<td>{{event.endRegisterDate | date('d-m-Y')}}</td>
						<td>{{event.nbParticipantMax}}</td>
						<td>{{event.state.label}}</td>
						<td></td>
						<td>{{event.organizer.pseudo}}</td>
						<td></td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	</div>

{% endblock %}
