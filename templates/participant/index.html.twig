{% extends 'base.html.twig' %}

{% block title %} Hello ParticipantController! {% endblock %}

{% block body %}

    <div class="container-fluid px-4">
        <div class="row">
            <div class ="col my-4">
                 {% if participant.imgName == null %}
        {% else %}
            <img class="logo" src="{{ asset('upload/')}}{{participant.imgName}}" >
        {% endif %}
            </div>
        <div class="col my-4">

            {{ participant.pseudo }}
            <p></p>
            <div class="d-flex">
                <p>Prénom : </p>
                <p>{{ participant.firstName }}</p>
            </div>
            <div class="d-flex">
                <p>Nom : </p>
                <p>{{ participant.lastName }}</p>
            </div>
            <div class="d-flex">
                <p>Téléphone : </p>
                <p>{{ participant.phone }}</p>
            </div>
            <div class="d-flex">
                <p>Email : </p>
                <p> {{ participant.email }}</p>
            </div>
            <div class="d-flex">
                <p>Campus : </p>
                <p>{{ participant.campus.name }}</p>
            </div>
            </div>
        </div>
    </div>

{% endblock %}
